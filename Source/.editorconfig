
# editorconfig.org

# top-most EditorConfig file
root = true

# Default settings:
# A newline ending every file
[*]
insert_final_newline = true
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[project.json]
indent_size = 2

# C++ Files
[*.{c,cpp,h,hpp,hxx}]
max_line_length = 140
curly_bracket_next_line = true
indent_brace_style = Allman

# Xml project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,nativeproj,locproj}]
indent_size = 2

[*.{csproj,vbproj,proj,nativeproj,locproj}]
charset = utf-8

# Xml build files
[*.builds]
indent_size = 2

# Xml files
[*.{xml,stylecop,resx,ruleset}]
indent_size = 2

# Xml config files
[*.{props,targets,config,nuspec}]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
[*.{cmd, bat}]
end_of_line = crlf
